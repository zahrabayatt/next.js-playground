generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// define our models:
// we use pascal case notation for naming our models.
// a model can have properites or fields

model User {
  // filed: name type attributes
  // Int?  make it optional
  // each model can have one id filed
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String
  followers Int     @default(0)
  isActive  Boolean @default(true)
}

